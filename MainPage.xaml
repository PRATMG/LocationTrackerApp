<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="LocationTrackerApp.MainPage"
             Title="Location Tracker">

    <!-- Grid layout: map fills *, controls are Auto rows -->
    <Grid Padding="0" RowSpacing="12" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />     <!-- Map fills available space -->
            <RowDefinition Height="Auto" />  <!-- Save button -->
            <RowDefinition Height="Auto" />  <!-- Plot/Clear buttons -->
            <RowDefinition Height="Auto" />  <!-- Status label -->
        </Grid.RowDefinitions>

        <!-- MAP: remove HeightRequest; let it expand -->
        <maps:Map x:Name="MapView"
                  Grid.Row="0"
                  MapType="Street"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand" />

        <!-- Save current location -->
        <Button Grid.Row="1"
                x:Name="TrackLocationButton"
                Text="Save Current Location"
                Clicked="OnTrackLocationClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="8"
                HorizontalOptions="FillAndExpand"
                Margin="16,0,16,0" />

        <!-- Plot & Clear -->
        <HorizontalStackLayout Grid.Row="2" Spacing="12" Margin="16,0,16,0">
            <Button Text="Plot Saved Points"
                    Clicked="OnPlotClicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HorizontalOptions="FillAndExpand" />
            <Button Text="Clear All"
                    Clicked="OnClearClicked"
                    BackgroundColor="#E53935"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HorizontalOptions="FillAndExpand" />
        </HorizontalStackLayout>

        <!-- Status -->
        <Label Grid.Row="3"
               x:Name="LocationLabel"
               Text="Saved points: 0"
               FontSize="14"
               TextColor="DarkGreen"
               HorizontalOptions="Center"
               Margin="0,4,0,12" />
    </Grid>
</ContentPage>
